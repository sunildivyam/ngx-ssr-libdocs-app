{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "runtime": "nodejs18",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": [
    {
      "target": "staging",
      "public": "functions/dist/ngx-ssr-libdocs-app/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "sitemap.xml",
          "function": "getSitemapXmlDownloadUrlFn"
        },
        {
          "source": "getImage",
          "function": "getImageFn"
        },
        {
          "source": "**",
          "function": "ssrAppFn"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=86400, s-max-age=86400"
            }
          ]
        },
        {
          "source": "getImage**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000, s-max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css|jpg|jpeg|png|gif|js|css|ico)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000, s-max-age=31536000"
            }
          ]
        },
        {
          "source": "@(dashboard|login|logout|error)/**/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        }
      ]
    },
    {
      "target": "production",
      "public": "functions/dist/ngx-ssr-libdocs-app/browser",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "sitemap.xml",
          "function": "getSitemapXmlDownloadUrlFn"
        },
        {
          "source": "getImage",
          "function": "getImageFn"
        },
        {
          "source": "**",
          "function": "ssrAppFn"
        }
      ],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800, s-max-age=604800"
            }
          ]
        },
        {
          "source": "getImage**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000, s-max-age=31536000"
            }
          ]
        },
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css|jpg|jpeg|png|gif|js|css|ico)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000, s-max-age=31536000"
            }
          ]
        },
        {
          "source": "@(dashboard|login|logout|error)/**/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache, no-store, must-revalidate"
            }
          ]
        }
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
